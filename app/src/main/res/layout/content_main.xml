<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.manish.user.MainActivity"
    tools:showIn="@layout/activity_main">


    <EditText
        android:id="@+id/editText1"
        android:layout_width="125dp"
        android:layout_height="38dp"
        android:ems="10"
        android:hint="Total Laptops"

        android:inputType="number"
        android:text="0"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="75dp"
        android:layout_above="@+id/editText2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Total CRTs"
        android:inputType="number"
        android:text="0"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="124dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/editText3" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Total Desktops and Servers"
        android:inputType="number"
        android:text="0"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="184dp"
        android:layout_above="@+id/editText4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_alignEnd="@+id/editText1"
        android:layout_alignRight="@+id/editText1"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Total Flat Panel Displays"
        android:inputType="number"
        android:text="0"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="244dp" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Total Mobile Phones"
        android:text="0"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="297dp"
        android:layout_below="@+id/editText4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Total Imaging Devices"
        android:inputType="number"
        android:text="0"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="297dp"
        android:layout_below="@+id/editText5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <EditText
        android:id="@+id/editText7"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:hint="Others"
        android:inputType="number"
        android:text="0"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="297dp"
        android:layout_above="@+id/button1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:textColor="@color/colorPrimary"
        android:text="Calculate Hazards"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText2"
        android:layout_toLeftOf="@+id/editText1"
        android:text="Total Laptops"
        android:layout_alignTop="@+id/editText1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/editText1"
        android:text="Total CRTs" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_toLeftOf="@+id/editText2"
        android:layout_toStartOf="@+id/editText2"
        android:text="Total Desktops nd Servers" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_toLeftOf="@+id/editText3"
        android:layout_toStartOf="@+id/editText3"
        android:text="Total Flat Panel Displays" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:layout_toLeftOf="@+id/editText4"
        android:layout_toStartOf="@+id/editText4"
        android:text="Total Mobile Phones" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_toLeftOf="@+id/editText5"
        android:layout_toStartOf="@+id/editText5"
        android:text="Total Imaging Devices" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView8"
        android:layout_toLeftOf="@+id/editText6"
        android:layout_toStartOf="@+id/editText6"
        android:text="Other (mouse, lan cards,Keyboard,etc)" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textAlignment="center"
        android:layout_above="@+id/editText1"
        android:text=" Evaluation of Health Hazards   "
        android:textColor="@color/colorAccent1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>